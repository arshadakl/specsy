<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Forget Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script>
    <style>

    </style>
</head>

<body class="  " style="height: 100vh; background: #000;">
    <div class="container d-flex justify-content-center align-items-center h-100 font-monospace">
        <div class=" col-md-5 col-11">
            <div class="card-body bg-light col-12 py-4" style="border-radius: 8px; ">
                <div class="container-fluid py-5">

                    <h5 class="card-title text-center fs-4 mb-4">Create New Password</h5>


                    <div class="col-9 mx-auto">

                        <form id="password-form" action="/createnewpass?id=<%=userId%>" method="post">
                            <div class="mb-3">
                                <label for="password" class="form-label">New Password</label>
                                <input type="password" class="form-control"
                                    style="border-radius: 0; border-color: #000;" id="register-password" name="password"
                                    required>
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Confirm Password</label>
                                <input type="password" class="form-control"
                                    style="border-radius: 0; border-color: #000;" id="register-confirm-password"
                                    required>
                                <p id="password-match-error" style="color: red; font-size: 15px;" class="mt-2"></p>
                            </div>
                            <button type="submit" class="btn btn-outline-dark w-100 py-2"
                                style="border-radius: 0;">Create new One</button>
                        </form>

                    </div>
                </div>
                <!-- <p  class=" text-center text-danger" style="font-size: 13px;">This Not Registered Email </p> -->

            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.5/lottie.min.js'></script>
    <script>
        var animation = bodymovin.loadAnimation({
            container: document.getElementById('animContainer'),
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: 'https://lottie.host/87abf9d2-a834-4f06-b667-26985786b0ba/0vh9JAhgi8.json' // lottie file path
        })
    </script>
    <script>
        const passwordForm = document.getElementById("password-form");
        const passwordField = document.getElementById("register-password");
        const confirmPasswordField = document.getElementById("register-confirm-password");
        const passwordMatchError = document.getElementById("password-match-error");

        // Function to check if passwords match and apply/remove the red border
        function checkPasswordsMatch() {
            const password = passwordField.value;
            const confirmPassword = confirmPasswordField.value;

            if (password === confirmPassword) {
                passwordMatchError.textContent = ""; // Passwords match, clear the error message
                confirmPasswordField.style.border = "1px solid #ced4da"; // Remove red border
            } else {
                passwordMatchError.textContent = "Passwords do not match!";
                confirmPasswordField.style.border = "1px solid red"; // Apply red border
            }
        }

        // Add an event listener to the confirm password field to check for matching passwords
        confirmPasswordField.addEventListener("keyup", checkPasswordsMatch);

        // Add an event listener to the form to prevent submission when passwords don't match
        passwordForm.addEventListener("submit", function (event) {
            const password = passwordField.value;
            const confirmPassword = confirmPasswordField.value;

            if (password !== confirmPassword) {
                event.preventDefault(); // Prevent form submission
                passwordMatchError.textContent = "Passwords do not match!";
                confirmPasswordField.style.border = "1px solid red"; // Apply red border
            }
        });
    </script>
</body>

</html>