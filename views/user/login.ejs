									<a href="/signup">Don't have an account</a>
								</div>
							</div><!-- .End .tab-pane -->

						</div><!-- End .tab-content -->
					</div><!-- End .form-tab -->
				</div><!-- End .form-box -->
			</div><!-- End .container -->
		</div><!-- End .login-page section-bg -->
	</main><!-- End .main -->


	<%- include('../user/layouts/footer.ejs') %>


		<% if(loginErr===1){ %>
			<div id="myAlert" data-aos="fade-down" 
				class="alert alert-secondary alert-dismissible fade show fs-6 fixed-top alt text-center text-danger"
				role="alert">
				<strong>Uh-oh!</strong> invalid User-Name or Password.

				<!-- <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> -->
	    <% }else if(verifyErr===1) {%>
			  <div id="myAlert1" data-aos="fade-down" 
						class="alert alert-dark  py-4	 fade show fs-5 fixed-top alt text-center text-white"
				role="alert">
				<form action="/reotp" method="post" id="verifyForm" style="display: none;">
					<input type="text" value="<%- verifyId %>" name="id" hidden>
					<button class="btn btn-dark" type="submit" >Request again</button>
				  </form>
				<strong>Uh-oh!</strong> You are not verified users. please click to<a style="cursor: pointer;" id="reVerify"
					> <span class="text-info link-underline-light"> verify Now
					</span></a>
		<%}else if(blockErr===1){%>
				<div id="myAlert2" data-aos="fade-down"
					class="alert alert-secondary alert-dismissible fade show fs-6 fixed-top alt text-center text-danger"
					role="alert">
					<strong>Uh-oh!</strong> Blocked User user.
				</div>
		<%}%>

		<%if(updatePass==1){%>
			<div id="myAlert" data-aos="fade-down" class="alert alert-success col-3 fixed-top "
				style="left: 20px; top:20px; border-radius: 7px; opacity: 0.9;" role="alert">
				<h6 class="alert-heading">Password Successfully Updated</h6>
				<p class="fs-6 form-text text-white">Your password has been successfully updated.</p>
			</div>
		<%}%>

		<script>
			const reVerify = document.getElementById("reVerify");
			const verifyForm = document.getElementById("verifyForm")
			reVerify.addEventListener("click", () => {
                verifyForm.submit();
            });
		</script>